<h1>My Page</h1>

<div style="padding-top: 50px">
    <h3>Items Lent</h3>
    <% if @seller_items %>
        <table class="table table-hover table-dark">
        <thead>
            <tr>
            <th scope="col">Item #</th>
            <th scope="col">Date</th>
            <th scope="col">Item</th>
            <th scope="col">Description</th>
            <th scope="col">Borrower</th>
            <th scope="col">Photo</th>
            <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% @seller_items.each_with_index do |si, index| %>
                <tr>
                <th scope="row"><%= "#{index+1}" %></th>
                <td><%= si[:item].created_at.strftime("%a, %d %b %Y") %></td>
                <td><%= si[:item].name %></td>
                <td><%= si[:item].description %></td>
                <% if si[:item].buyer_id %>
                    <td><%= @users.find(@buyer[index]).email %></td>
                <% else %>
                    <td>-</td>
                <% end %>
                <td>-</td>
                <td><%= link_to 'Edit', edit_item_path(si[:item]), class: "btn btn-sm btn-warning" %></td>
                <td><%= link_to 'Delete', item_path(si[:item]), class: "btn btn-sm btn-danger",method: :delete, data: {confirm: "Are you sure?"} %></td>
                </tr>
            <% end %>
        </tbody>
        </table>
    <% end %>
</div>

<div style="padding-top: 50px">
    <h3>Items Borrowed</h3>
    <% if @buyer_items %>
        <table class="table table-hover table-dark">
        <thead>
            <tr>
            <th scope="col">Item #</th>
            <th scope="col">Date</th>
            <th scope="col">Item</th>
            <th scope="col">Description</th>
            <th scope="col">Lender</th>
            <th scope="col">Photo</th>
            </tr>
        </thead>
        <tbody>
            <% @buyer_items.each_with_index do |bi, index| %>
                <tr>
                <th scope="row"><%= "#{index+1}" %></th>
                <td><%= bi[:item].created_at.strftime("%a, %d %b %Y") %></td>
                <td><%= bi[:item].name %></td>
                <td><%= bi[:item].description %></td>
                <td><%= @users.find(@seller[index]).email %></td>
                <td>-</td>
                </tr>
            <% end %>
        </tbody>
        </table>
    <% end %>
</div>
